<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
       <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Uername : </label>
            <input name="username" class="form-control" required type="text" id="username" /> 
          </div>    

          <div class="mb-3">
            <label for="password" class="form-label">Password: </label>
            <input name="password" class="form-control" required type="password" id="password" /> 
          </div> 

          <button class="btn btn-success">Login</button>
       </form>
    </div> 
 </div>